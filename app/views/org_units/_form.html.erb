<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<div class="container">
  <%= simple_form_for(@org_unit,
    html: { class: 'form-horizontal card mt-2' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.input :name
	 %>

      <%= f.input :parent_id, as: :hidden %>
      <%= f.input :parent_id,
            collection: OrgUnit.arrange_as_array,
            wrapper: :horizontal_select
        %>

      <%= f.input :description, as: :rich_text_area
         %>

      <%= f.input :valid_until, as: :string, wrapper: :horizontal_date
         %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
