    <div class="text-body-secondary">
      <%= @org_unit.description %>
    </div>
    <% if @org_unit.valid_until.present? %>
      <div class="text-body-secondary">
        <%= "GÃ¼ltig bis: #{@org_unit.valid_until}" %>
