<%= render partial: 'tasks/modal_for_cards' %>

<div class="card mb-2">
  <div class="card-header">
    <div class="d-flex w-100 justify-content-between">
      <h4 class="title"><%= @org_unit %></h4>

      <div role="toolbar">
        <%= back_link %>
        <%= edit_link(@org_unit) %>
        <%= delete_link(@org_unit) %>
      </div>
    </div>
  </div>
</div>

<div class="ml-2 mb-3">
<%= render 'tasks/cards',
      columns: @columns,
      tasks_per_column: @tasks_per_column,
      filter: { org_unit_id: @org_unit.id },
      url: request.url,
      ability: @current_ability
 %>

</div>
<%= new_link [@org_unit, Task] %>

