<%= turbo_frame_tag 'modal' do %>
  <div class="modal fade" id="sharedModal" tabindex="-1" role="dialog"
       aria-labelledby="sharedModalLabel" aria-hidden="true"
       data-controller="modal" >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <%= turbo_frame_tag 'modal-body' %>
      </div>
    </div>
  </div>
<% end %>
