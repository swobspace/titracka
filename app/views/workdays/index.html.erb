<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.workdays') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "workdays_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          target: 'datatables.datatable',
          order: [[0, 'desc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.user') %></th>
            <th><%= t('attributes.date') %></th>
            <th><%= t('attributes.work_start') %></th>
            <th><%= t('attributes.pause') %></th>
            <th class="nosort"><%= t('titracka.action') %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @workdays.each do |workday| %>
        <%= content_tag_for(:tr, workday) do %>
                <td><%= workday.user %></td>
                <td><%= workday.date %></td>
                <td><%= workday.work_start %></td>
                <td><%= workday.pause %></td>
                <td class="text-nowrap">
            <%= show_link workday %>
            <%= edit_link workday %>
            <%= delete_link workday %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link Workday %>
