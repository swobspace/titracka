<div class="card mb-3">
  <div class="card-header">
    <div class="subtitle float-none"><%= t('activerecord.models.task') %>:</div>
    <h4 class="title float-left"><%= @task %></h4>

    <div role="toolbar" class="float-right">
      <%= edit_link(@task) %>
      <%= delete_link(@task) %>
    </div>
  </div>
  <div class="card-body">
    <table class="table table-sm table-hover table-borderless autowidth">
    
      <tr>
        <th class="w25"><%= t('attributes.subject')%>:</th>
        <td class="w-100"><%= @task.subject %></td>
      </tr>
    
      <tr>
        <th class="w25"><%= t('attributes.description')%>:</th>
        <td><%= @task.description %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.state')%>:</th>
        <td><%= @task.state %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.responsible')%>:</th>
        <td><%= @task.responsible %></td>
      </tr>

      <tr>
        <th><%= t('attributes.org_unit')%>:</th>
        <td><%= @task.org_unit %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.list')%>:</th>
        <td><%= @task.list %></td>
      </tr>

      <tr>
        <th><%= t('attributes.priority')%>:</th>
        <td><%= t(@task.priority, scope: 'titracka.priority') %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.start')%> 
            <i class="fas fa-long-arrow-alt-right"></i>
            <%= t('attributes.deadline')%>:</th>
        <td><%= @task.start %>
            <i class="fas fa-long-arrow-alt-right"></i>
            <%= @task.deadline %></td>
      </tr>
    
    
      <tr>
        <th><%= t('attributes.resubmission')%>:</th>
        <td><%= @task.resubmission %></td>
      </tr>
    
      <tr>
        <th><%= t('attributes.private')%>:</th>
        <td><%= @task.private %></td>
      </tr>

      <tr>
        <th><%= t('attributes.owner')%>:</th>
        <td><%= @task.user %></td>
      </tr>
        </table>

    <div role="toolbar">
      <%= back_link %>
      <%= new_link Task %>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-header">
    <h5 class="card-title"><%= t('attributes.time_accountings')%></h5>
  </div>
  <div class="card-body">
    <%= render partial: 'time_accountings',
               locals: { time_accountings: @task.time_accountings } %>

    <%= new_link [@task, TimeAccounting] %>
  </div>
</div>

