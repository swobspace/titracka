<div class='nested-fields bg-light p-3 mb-1 border border-top-1 border-bottom-1'>
  <div class='row mb-3'>
    <%= form.hidden_field :_destroy %>
    <div class="col-sm-4">
      <%= form.text_field :identifier, 
            placeholder: t('attributes.identifier'), 
            class: 'form-control' 
       %>
    </div>
    <div class="col">
      <%= form.select :reference_id, Reference.active.collect {|r| [r.name, r.id] },
            { include_blank: false },
            { class: 'form-control select' }
       %>
    </div>
    <small class="col-sm-1 me-3">
      <%= link_to icon_delete, "#", class: 'btn btn-danger',
            data: { action: "click->nested-form#remove_association" } 
       %>
    </small>
  </div>
  <div class='mb-0'>
    <%= form.text_field :subject, 
          placeholder: t('attributes.subject'), 
          class: 'form-control' 
     %>
  </div>
</div>
