<div class='nested-fields'>
  <div class='form-group row'>
    <%= form.hidden_field :_destroy %>
    <div class="col-sm-4">
      <%= form.text_field :identifier, 
            placeholder: t('attributes.identifier'), 
            class: 'form-control' 
       %>
    </div>
    <div class="flex-fill">
      <%= form.select :reference_id, Reference.all.collect {|r| [r.name, r.id] },
            { include_blank: false },
            { class: 'form-control select' }
       %>
    </div>
    <small class="col-sm-1 mr-2">
      <%= link_to icon_delete, "#", class: 'btn btn-danger',
            data: { action: "click->nested-form#remove_association" } 
       %>
    </small>
  </div>
</div>
