<h1><%= t('controller.tasks') %></h1>

<%= content_tag :div, class: :row, data: { controller: 'draggable' } do %>
  <% @columns.each do |column| %>
    <div class='col'>
      <div class='card'>
        <div class="card-header text-center">
          <%= column.name %>
        </div>
      
        <%= content_tag :ul, class: 'list-group list-group-flush dropzone', data: { id: column.id, target: 'draggable.column' } do %>
          <%= render column.tasks %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

