<div class="container">
  <%= simple_form_for(@task,
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.input :subject, label: t('attributes.task')
	 %>
      <%= f.input :description, as: :rich_text_area
	 %>
      <%= f.association :state, 
            include_blank: false
	 %>
      <%= f.association :responsible
	 %>
      <%= f.association :org_unit
	 %>
      <%= f.association :list
	 %>
      <%= f.input :priority, collection:
            Task::PRIORITIES.map {|x| [t(x, scope: 'titracka.priority'), x]},
              include_blank: false,
              input_html: {class: 'col-sm-3'}
	 %>
      <%= f.input :start, as: :string, wrapper: :horizontal_date
        %>
       <%= f.input :deadline, as: :string, wrapper: :horizontal_date
        %>
      <%= f.input :resubmission, as: :string, wrapper: :horizontal_date
	 %>
      <%= f.input :private
	 %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
