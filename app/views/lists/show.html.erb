<div class="card mb-3">
  <div class="card-header">
    <div class="subtitle float-none"><%= t('activerecord.models.list') %>:</div>
    <h4 class="title float-left"><%= @list %></h4>

    <div role="toolbar" class="float-right">
      <%= edit_link(@list) %>
      <%= delete_link(@list) %>
    </div>
    
  </div>
  <div class="card-body">
    <table class="table table-borderless table-hover autowidth">
      <tr>
        <th class="w-25"><%= t('attributes.org_unit')%>:</th>
        <td><%= @list.org_unit %></td>
      </tr>
    </table>
    <div role="toolbar">
      <%= back_link %>
    </div>

  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="card-title"><%= t('attributes.tasks')%></h5>
  </div>
  <div class="card-body">
    <%= render partial: 'tasks',
               locals: { tasks: @list.tasks } %>

    <%= new_link [@list, Task] %>
  </div>
</div>

