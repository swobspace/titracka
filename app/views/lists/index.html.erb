<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.lists') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "lists_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          target: 'datatables.datatable',
          order: [[0, 'desc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.org_unit') %></th>
            <th><%= t('attributes.name') %></th>
            <th class="nosort"><%= t('daisy.action') %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @lists.each do |list| %>
        <%= content_tag_for(:tr, list) do %>
                <td><%= list.org_unit %></td>
                <td><%= list.name %></td>
                <td class="text-nowrap">
            <%= show_link list %>
            <%= edit_link list %>
            <%= delete_link list %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link List %>
