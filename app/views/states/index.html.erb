<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.states') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "states_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          "datatables-target": 'datatable',
          order: [[2, 'asc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.name') %></th>
            <th><%= t('attributes.state') %></th>
            <th><%= t('attributes.position') %></th>
            <th class="nosort"><%= t('titracka.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @states.each do |state| %>
        <%= content_tag_for(:tr, state) do %>
                <td><%= state.name %></td>
                <td><%= t(state.state, scope: 'titracka.state') %></td>
                <td><%= state.position %></td>
                <td class="text-nowrap">
            <%= show_link state %>
            <%= edit_link state %>
            <%= delete_link state %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link State %>
