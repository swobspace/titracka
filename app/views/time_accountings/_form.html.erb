<div class="container">
  <%= simple_form_for([@time_accountable, @time_accounting],
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.association :task, 
          collection: Task.accessible_by(current_ability, :read).order(:subject),
          wrapper_html: {data: {controller: 'select2'}},
          input_html: {data: {target: 'select2.input'}}
	 %>
      <%= f.input :description
	 %>
      <%= f.input :date, as: :string, wrapper: :horizontal_date
	 %>
      <%= f.input :formatted_duration, as: :string, input_html: { class: 'col-sm-3' }
	 %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
