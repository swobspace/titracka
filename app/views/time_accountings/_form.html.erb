<div class="container">
  <%= simple_form_for([@time_accountable, @time_accounting],
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.association :task, 
          collection: @tasks,
          label_method: :name_with_list_or_org_unit,
          wrapper: :horizontal_select2
	 %>
      <%= f.input :description
	 %>
      <%= f.input :date, as: :date, html5: true, wrapper: :horizontal_date
	 %>
      <%= f.input :formatted_duration, as: :string, wrapper: :horizontal_short
	 %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
