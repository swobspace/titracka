<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.time_accountings') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "time_accountings_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          target: 'datatables.datatable',
          order: [[0, 'desc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.task') %></th>
            <th><%= t('attributes.user') %></th>
            <th><%= t('attributes.description') %></th>
            <th><%= t('attributes.date') %></th>
            <th><%= t('attributes.duration') %></th>
            <th class="nosort"><%= t('daisy.action') %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @time_accountings.each do |time_accounting| %>
        <%= content_tag_for(:tr, time_accounting) do %>
                <td><%= time_accounting.task %></td>
                <td><%= time_accounting.user %></td>
                <td><%= time_accounting.description %></td>
                <td><%= time_accounting.date %></td>
                <td><%= time_accounting.duration %></td>
                <td class="text-nowrap">
            <%= show_link time_accounting %>
            <%= edit_link time_accounting %>
            <%= delete_link time_accounting %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link TimeAccounting %>
