<%= render 'shared/turbo-cache-control' %>

<h1><%= t('controller.references') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "references_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          order: [[0, 'desc']].to_json
        } do %>
    <thead>
      <tr>
        <th><%= t('attributes.name') %></th>
        <th><%= t('attributes.reference_url') %></th>
        <th class="text-center"><%= t('attributes.valid_until') %></th>
        <th class="nosort"><%= t('titracka.action') %></th>
      </tr>
    </thead>
    <tfoot class="search">
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th class="nosearch"></th>
      </tr>
    </tfoot>
    <tbody>
      <% @references.each do |reference| %>
        <%= content_tag(:tr, id: dom_id(reference), class: dom_class(reference)) do %>
                <td><%= reference.name %></td>
                <td><%= reference.url %></td>
                <td class="text-center"><%= reference.valid_until %></td>
                <td class="text-nowrap">
            <%= show_link reference %>
            <%= edit_link reference %>
            <%= delete_link reference %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link Reference %>
