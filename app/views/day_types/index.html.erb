<% content_for :head do %>
  <meta name="turbolinks-cache-control" content="no-cache">
<% end %>

<h1><%= t('controller.day_types') %></h1>

<div data-controller="datatables">
  <%= content_tag :table, role: :datatable,
        id: "day_types_table",
        class: "table table-bordered table-responsive-xl",
        data: {
          target: 'datatables.datatable',
          order: [[0, 'desc']].to_json
        } do %>
    <thead>
      <tr>
            <th><%= t('attributes.abbrev') %></th>
            <th><%= t('attributes.description') %></th>
            <th class="nosort"><%= t('titracka.action') %></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </tfoot>
    <tbody>
      <% @day_types.each do |day_type| %>
        <%= content_tag_for(:tr, day_type) do %>
                <td><%= day_type.abbrev %></td>
                <td><%= day_type.description %></td>
                <td class="text-nowrap">
            <%= show_link day_type %>
            <%= edit_link day_type %>
            <%= delete_link day_type %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
</div>

<br />

<%= back_link %>
<%= new_link DayType %>
